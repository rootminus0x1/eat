{
  "printWidth": 120,
  "singleQuote": false,
  "bracketSpacing": true,
  "useTabs": false,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ".prettierrc"
    },
    {
      "files": "*.sol",
      "options": {
        "singleQuote": false,
        "tabWidth": 2,
        "explicitTypes": "preserve",
        "semi": true,
        "trailingComma": "all"
      }
    },
    {
      "files": "*.json",
      "options": {
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "tabWidth": 4,
        "singleQuote": true,
        "explicitTypes": "preserve",
        "semi": true,
        "trailingComma": "all"
      }
    }
  ]
}
