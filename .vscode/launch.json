  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug dig",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "args": ["${workspaceFolder}/src/dig.ts", "${workspaceFolder}/test/aladdin-fx-market.yml"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]

    }
  ]
}

